{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "${configDir}/dist",
    "sourceMap": true,
    // Use inlineSources: true because often we only publish the dist folder on npm
    "inlineSources": true
  },
  "$schema": "https://json.schemastore.org/tsconfig"
}
